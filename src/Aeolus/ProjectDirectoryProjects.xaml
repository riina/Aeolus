<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localmodelproxies="using:Aeolus.ModelProxies"
             x:Class="Aeolus.ProjectDirectoryProjects"
             Title="Projects">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="10,0"
            VerticalOptions="StartAndExpand">

            <HorizontalStackLayout Spacing="10">
                <Button Style="{DynamicResource smolBtnStyle}"
                x:Name="RefreshBtn"
                Text="Refresh"
                SemanticProperties.Hint="Refresh"
                Clicked="RefreshBtn_Clicked"
                HorizontalOptions="Start" />
            </HorizontalStackLayout>

            <CollectionView x:Name="projectList" x:DataType="localmodelproxies:ProjectDirectoryProject">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid HeightRequest="50">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding FullPath}" FontSize="12" Grid.Row="1" Grid.Column="0" />
                            <Label Text="{Binding SoftwareAndFramework}" FontSize="12" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
